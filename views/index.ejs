<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Teams</title>
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-12 col-md-8">
          <h1>Teams</h1>

          <ul id="teams">
            <% teams.forEach( (team) => { %>
            <li>Team <%= team.team_id %> : <%= team.team_name %> <a class="btn btn-info" href=<%- "/team/" + team.team_id %>> Details </a><button class="btn btn-info delete-btn" data-id="<%= team.team_id %>">Delete</button></li>
            <% }) %>
          </ul>
        </div>
        <!-- grades col-8 -->

        <div class="col-12 col-md-4">
          <h2>Create</h2>

          <%- include("./create_form.ejs") %>
        </div>
      </div>
      <!-- create col-4 -->

      <%- include("./footer.ejs") %>
    </div>
    <!-- container -->

    <script
      src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
      integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"
    ></script>
    <script>
      // Add an event listener to handle the click on delete buttons
      document.querySelectorAll('.delete-btn').forEach(button => {
        button.addEventListener('click', function() {
          const teamId = this.getAttribute('data-id');
          deleteTeam(teamId);
        });
      });
    
      function deleteTeam(teamId) {
        // Use fetch API or any other method to send a DELETE request to your server
        fetch(`/team/delete/${teamId}`, {
          method: 'DELETE',
        })
        .then(response => {
          if (response.ok) {
            console.log(`Team with ID ${teamId} deleted successfully.`);
            // Optionally, update the UI or reload the page
          } else {
            console.error(`Error deleting team with ID ${teamId}.`);
          }
        })
        .catch(error => {
          console.error(`Error deleting team with ID ${teamId}: ${error}`);
        });
      }
    </script>
  </body>
</html>
